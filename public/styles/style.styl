    bor solid 1px #666
    rad 5px
    pad 4px 23px
    deco none
    color #000
    shad 1px 1px 3px #666
    grad top, #ccc, #fff
  &.hover::-webkit-file-upload-button
    -webkit-appearance none
    bi none;
    bc #fff
    shad inset 0 0 8px #aaa, 1px 1px 3px #666
